pipeline { 
    agent any 
    tools { 
        maven 'Maven' // Ensure name matches with configured tool name exactly
    } 
    stages { 
        stage('Checkout') { 
            steps { 
                git branch: 'master', url: 'https://github.com/Radhikachilla/RadhikaMaven.git'
            } 
        } 
        stage('Build') { 
            steps { 
                bat 'mvn clean package' 
            } 
        } 
        stage('Test') { 
            steps { 
                bat 'mvn test' 
            } 
        } 
        stage('Run Application') { 
            steps { 
                bat 'java -jar target/HWorld-0.0.1-SNAPSHOT.jar' // fixed dash before 'jar'
            }
        }
    } // <- closes stages
} // <- closes pipeline
